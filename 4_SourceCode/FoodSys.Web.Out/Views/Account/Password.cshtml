@{
	ViewBag.Title = "Cart";
}
<style type="text/css">
	/* 其他三个页面共用，需要放在css文件中
----------------------------------------------------------*/
	.layout-left
	{
		float: left;
		width: 150px;
		background-color: #EDF4FC;
		padding: 0 15px 0 0;
		height: 100%;
		overflow: hidden;
	}
	.layout-left ul
	{
		margin-top: 0;
	}
	
	.layout-left li
	{
		list-style-type: none;
		font-size: 14px;
		margin: 5px 0;
		text-align: right;
	}
	
	.layout-left a:visited
	{
		color: Black;
	}
	
	.active
	{
		font-weight: bold;
		color: Black;
		border-bottom: 1px solid #0071bc;
	}
	
	.layout-right
	{
		margin: 0 0 0 165px;
	}
	.layout-right ul
	{
	}
	
	.layout-right li
	{
		list-style-type: none;
		margin: 10px 0;
	}
	
	
	.table-detail th
	{
		text-align: right;
		background: #F3F7F9;
		padding: 0 10px 0 150px;
		font-weight: normal;
	}
	input[type="password"]
	{
		width: 250px;
		padding: 5px 2px;
	}
</style>
<script type="text/javascript">
	$(function () {
		$(".layout-left").height($(".layout-right").height() + "px");
	});

</script>
<h2 class="title-h2">
	密码修改..
</h2>
<div class="layout-left">
	<ul>
		<li><a href="/personal">我的订单</a></li>
		<li><a href="/personal/cart">我的购物车</a></li>
		<li><a href="/personal/profile">我的资料</a></li>
		<li class="active"><a href="#">密码修改</a></li>
	</ul>
</div>
<div class="layout-right">
	<ul>
		<li>
			<table class="table-detail">
				<tr>
					<th>
						原密码
					</th>
					<td>
						<input type="password" value="" />
					</td>
				</tr>
				<tr>
					<th>
						新密码
					</th>
					<td>
						<input type="password" value="" />
					</td>
				</tr>
				<tr>
					<th>
						确认密码
					</th>
					<td>
						<input type="password" value="" />
					</td>
				</tr>
				<tr>
					<td colspan="2" style="text-align: center;">
						<input type="button" value="修改" class="button button-rounded button-flat-primary" />
					</td>
				</tr>
			</table>
		</li>
	</ul>
</div>
