/* 日期格式化 ----------------------------------------------------------*/
@helper RenderDate(DateTime? date, string format = null)
	{
		if (date == null)
		{
	<text/>
		}
		else if (format == null)
		{ 
	<text>@date.Value.ToString("yyyy-MM-dd")</text>
		}
		else
		{
	<text>@date.Value.ToString(format)</text>
		}
}



