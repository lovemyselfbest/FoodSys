@{
	Layout = null;
}
@model FoodSys.Web.Areas.ModuleResource.Models.ModelSupplierIndex
<div class="common-table-container">
	<table class="common-table" id="common-table">
		<colgroup>
			<col width="45" />
			<col width="45" />
			<col width="45" />
			<col width="200" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
		</colgroup>
		<thead>
			<tr>
				<th>
					<input type="checkbox" class="common-table-checkbox-all" />
				</th>
				<th colspan="2">
					操作
				</th>
				@Html.HiddenFor(x => x.SearchEntity._OrderName, new { data_order_name = "" })
				@Html.HiddenFor(x => x.SearchEntity._OrderDirection, new { data_order_direction = "" })
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.ID, "ID"))
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.Name, "名称"))
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.Mobile, "手机"))
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.Phone, "电话"))
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.UpdateDate, "添加"))
				@(Html.ThOrderHelper<FoodSys.Entity.UTSupplier>(x => x.CreateDate, "更新时间"))
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.UTSupplierCollection)
   {
				<tr ondblclick="javascript:show('@item.ID');">
					<td>
						<input type="checkbox" name="checkboxItem" class="checkboxItem" value="@item.ID" />
					</td>
					<td>
						<a href="javascript:editSupplier('@item.ID')" class="a-edit" title="修改">&nbsp</a>
					</td>
					<td>
						<a href="javascript:deleteSupplier('@item.ID')" class="a-delete" title="删除">&nbsp</a>
					</td>
					<td title="@item.ID">
						@item.ID
					</td>
					<td title="@item.Name">
						@item.Name
					</td>
					<td title="@item.Mobile">
						@item.Mobile
					</td>
					<td title="@item.Phone">
						@item.Phone
					</td>
					<td title="@item.CreateDate">
						@item.CreateDate.ToString()
					</td>
					<td title="@item.UpdateDate">
						@item.UpdateDate.ToString()
					</td>
				</tr>
   }
		</tbody>
	</table>
</div>
<div>
	@{
		Html.RenderPartial("/Views/Controls/Paginate.cshtml", Model.PaginateHelperObject);
	}
</div>
