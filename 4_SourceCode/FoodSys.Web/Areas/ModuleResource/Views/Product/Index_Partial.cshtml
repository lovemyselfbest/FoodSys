@{
	Layout = null;
}
@model FoodSys.Web.Areas.ModuleResource.Models.ModelProductIndex
<div class="common-table-container">
	<table class="common-table" id="common-table">
		<colgroup>
			<col width="45" />
			<col width="45" />
			<col width="45" />
			<col width="150" />
			<col width="250" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="100" />
			<col width="150" />
			<col width="150" />
		</colgroup>
		<thead>
			<tr>
				<th>
					<input type="checkbox" class="common-table-checkbox-all" />
				</th>
				<th colspan="2">
					操作
				</th>
				@Html.HiddenFor(x => x.SearchEntity._OrderName, new { data_order_name = "" })
				@Html.HiddenFor(x => x.SearchEntity._OrderDirection, new { data_order_direction = "" })
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.Name, "名称"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.SupplierID, "供应商"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.ProductType, "产品类型"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.PurchasePrice, "进价"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.SellPrice, "售价"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.UnitID, "单位"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.MaxNumber, "最大售量"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.Status, "状态"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.CreateDate, "添加时间"))
				@(Html.ThOrderHelper<FoodSys.Entity.UVProduct>(x => x.UpdateDate, "更新时间"))
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.UVProductCollection)
   {
				<tr ondblclick="javascript:show('@item.ID');">
					<td>
						<input type="checkbox" name="checkboxItem" class="checkboxItem" value="@item.ID" />
					</td>
					<td>
						<a href="javascript:editProduct('@item.ID')" class="a-edit" title="修改">&nbsp</a>
					</td>
					<td>
						<a href="javascript:deleteProduct('@item.ID')" class="a-delete" title="删除">&nbsp</a>
					</td>
					<td title="@item.Name">
						@item.Name
					</td>
					<td title="@item.SupplierName">
						@item.SupplierName
					</td>
					<td title="@item.TypeName">
						@item.TypeName
					</td>
					<td title="@item.PurchasePrice">
						@item.PurchasePrice
					</td>
					<td title="@item.SellPrice">
						@item.SellPrice
					</td>
					<td title="@item.UnitName">
						@item.UnitName
					</td>
					<td title="@item.MaxNumber">
						@item.MaxNumber
					</td>
					<td>
						@(((EnumProductStatus)item.Status).ToString())
					</td>
					<td title="@item.CreateDate">
						@item.CreateDate.ToString()
					</td>
					<td title="@item.UpdateDate">
						@item.UpdateDate.ToString()
					</td>
				</tr>
   }
		</tbody>
	</table>
</div>
<div>
	@{
		Html.RenderPartial("/Views/Controls/Paginate.cshtml", Model.PaginateHelperObject);
	}
</div>
