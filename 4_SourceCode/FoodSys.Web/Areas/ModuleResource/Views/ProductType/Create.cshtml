@model FoodSys.Web.Areas.ModuleResource.Models.ModelProductTypeCreate
@{
	ViewBag.Title = "ModelProductTypeCreate";
	Layout = "~/Views/Shared/_LayoutDialog.cshtml";
}
<style type="text/css">
	.table-detail th
	{
		width: 150px;
	}
	.td-retype .field-validation-valid
	{
		display: none;
	}
</style>
<div class="wfill hfill center">
	<p class="p-s1">
		@(Model.PageState)供应商
	</p>
	@using (Html.BeginForm())
 {
		@Html.HiddenFor(x => x.UTProductTypeEntity.Version)
		@Html.HiddenFor(x => x.UTProductTypeEntity.ID)
		@Html.HiddenFor(x => x.UTProductTypeEntity.ParentID)
		@Html.HiddenFor(x => x.UTProductTypeEntity.CreateDate)
		@Html.HiddenFor(x => x.UTProductTypeEntity.CreateID)
		@Html.HiddenFor(x => x.ID)
		<table cellpadding="0" cellspacing="0" align="center" class="table-detail">
			<thead>
				<tr>
					<td colspan="2">
						<div>
							供应商信息</div>
					</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>
						<span class="red">*</span>名称：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTProductTypeEntity.TypeName, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.UTProductTypeEntity.TypeName)
					</td>
				</tr>
				<tr>
					<th>
						排序：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTProductTypeEntity.SortIndex)
					</td>
				</tr>
				<tr>
					<th>
						是否叶子：
					</th>
					<td>
						@Html.CheckBox("UTProductTypeEntity.IsLeaf", Model.UTProductTypeEntity.IsLeaf ?? false)
					</td>
				</tr>
				<tr>
					<th>
						状态：
					</th>
					<td>
						@Html.DropDownListForFix(x => x.UTProductTypeEntity.Status, SelectListHelper.ComposeSelectListFromEnum<FoodSys.Enum.EnumProductTypeStatus>())
					</td>
				</tr>
			</tbody>
		</table>
		<div class="center wfill">
			<input type="submit" value="保存" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog();" />
		</div>
 }
</div>
