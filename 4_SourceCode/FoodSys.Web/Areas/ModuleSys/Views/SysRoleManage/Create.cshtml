@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_LayoutDialog.cshtml";
}
@model FoodSys.Web.Areas.ModuleSys.Models.ModelSysRoleManageCreate

@using (Html.BeginForm())
{
	@Html.HiddenFor(x => x.SysRole.ID)
    @Html.HiddenFor(x => x.SysRole.Version)
	<div>
		<table cellpadding="0" cellspacing="0" align="center" class="table-detail-nostyle">
			<tbody>
				<tr>
					<th>
						角色名称：
					</th>
					<td>
						@Html.TextBoxFor(x => x.SysRole.RoleName)
						@Html.ValidationMessageFor(x => x.SysRole.RoleName)
					</td>
				</tr>
				<tr>
					<th>
						角色类型：
					</th>
					<td>
						@Html.DropDownListFor(x => x.SysRole.UserTypeID, SelectListHelper.ComposeSelectListFromCollect(Model.SysUserTypeList, x => x.ID, x => x.Name))
					</td>
				</tr>
				<tr>
					<th>
						备注：
					</th>
					<td>
						@Html.TextAreaForFix(x => x.SysRole.Remark, new { style = "height:90px;width:460px;", cols = "20", rows = "5" })
					</td>
				</tr>
			</tbody>
		</table>
		<div class="center wfill">
			<input type="submit" value="保存" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog();" />
		</div>
	</div>

}
