@model FoodSys.Web.Areas.ModuleSys.Models.ModelSysOrgDepartmentManageCreate
@{
	Layout = "~/Views/Shared/_LayoutDialog.cshtml";
	var PageState = ViewBag.PageState;
}
<style type="text/css">
	.table-detail th
	{
		width: 150px;
	}
</style>
<div class="wfill hfill center">
	<p class="p-s1">
		@(ViewBag.PageState)部门信息
	</p>
	@using (Html.BeginForm())
 {
        @Html.HiddenFor(x => x.UTOrgDepartmentEntity .Version)
		<table cellpadding="0" cellspacing="0" align="center" class="table-detail">
			<thead>
				<tr>
					<td colspan="2">
						<div>
							部门信息</div>
					</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>
						<span class="red">*</span>部门名称：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTOrgDepartmentEntity.DepartmentName, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.UTOrgDepartmentEntity.DepartmentName)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>负责人：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTOrgDepartmentEntity.DutyUser, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.UTOrgDepartmentEntity.DutyUser)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>联系电话：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTOrgDepartmentEntity.Mobile, new { maxlength = 20 })
						@Html.ValidationMessageFor(x => x.UTOrgDepartmentEntity.Mobile)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>Email：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTOrgDepartmentEntity.Email, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.UTOrgDepartmentEntity.Email)
					</td>
				</tr>
                <tr>
					<th>
						<span class="red">*</span>排序：
					</th>
					<td>
						@Html.TextBoxFor(x => x.UTOrgDepartmentEntity.OrderIndex, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.UTOrgDepartmentEntity.OrderIndex)
					</td>
				</tr>
				<tr>
					<th>
						备注：
					</th>
					<td>
						@Html.TextAreaForFix(x => x.UTOrgDepartmentEntity.Remark, new { style = "height:90px;width:460px;", cols = "20", rows = "5" })
					</td>
				</tr>
			</tbody>
		</table>
		<div class="center wfill">
			@Html.HiddenFor(x => x.UTOrgDepartmentEntity.ID)
            @Html.Hidden("organizationId", @Model.OrganizationId)
			<input type="submit" value="保存" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog();" />
		</div>
 }
</div>
