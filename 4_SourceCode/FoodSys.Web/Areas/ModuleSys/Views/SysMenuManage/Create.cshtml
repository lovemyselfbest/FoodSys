@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDialog.cshtml";
}
@model FoodSys.Web.Areas.ModuleSys.Models.ModelSysMenuManageCreate

<style type="text/css">
	.table-detail th
	{
		width: 150px;
	}
	.td-retype .field-validation-valid
	{
		display: none;
	}
</style>
<div class="wfill hfill center">
	<p class="p-s1">
		@(Model.PageState)菜单管理
	</p>
	@using (Html.BeginForm())
 {
        @Html.HiddenFor(x => x.SysMenuEntity.Version)
		<table cellpadding="0" cellspacing="0" align="center" class="table-detail">
			<thead>
				<tr>
					<td colspan="2">
						<div>
							菜单信息</div>
					</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>
						<span class="red">*</span>菜单名称：
					</th>
					<td>
						@Html.TextBoxFor(x => x.SysMenuEntity.Name, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.SysMenuEntity.Name)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>排序：
					</th>
					<td>
						@Html.TextBoxFor(x => x.SysMenuEntity.OrderIndex, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.SysMenuEntity.OrderIndex)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>图标名字：
					</th>
					<td class="td-retype">
						@Html.TextBoxFor(x => x.SysMenuEntity.Icon, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.SysMenuEntity.Icon)
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span>路由地址：
					</th>
					<td>
						@Html.TextAreaForFix(x => x.SysMenuEntity.TargetURL, new { maxlength = 100, style = "height:90px;width:200px;", cols = "20", rows = "5" })
						@Html.ValidationMessageFor(x => x.SysMenuEntity.TargetURL)
					</td>
				</tr>
			</tbody>
		</table>
		<div class="center wfill">
			@Html.HiddenFor(x => x.SysMenuEntity.ID)
			@Html.Hidden("menuId", @Model.MenuId)
			<input type="submit" value="保存" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog();" />
		</div>
 }
</div>

