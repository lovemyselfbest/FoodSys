@model FoodSys.Web.Areas.ModuleSys.Models.ModelPasswordRetrieveLogin
@{
	Layout = "~/Views/Shared/_LayoutDialog.cshtml";
	ViewBag.Title = "Index";
}
<style type="text/css">
	.table-detail th
	{
		width: 100px;
	}
	.width-text
	{
		width: 200px;
	}
	.department-title
	{
		font-weight: bolder;
	}
</style>
<div class="wfill hfill center">
	<p class="p-s1">
		多方账号登录
	</p>
	@using (Html.BeginForm())
 {
		<table cellpadding="0" cellspacing="0" class="table-detail">
			<thead>
				<tr>
					<td colspan="4">
						<div>
							多方账号登录
						</div>
					</td>
				</tr>
			</thead>
			@for (int i = 0; i < Model.DepartmentCollection.Count(); i++)
   {
				<tr>
					<td colspan="4" class="department-title">
						@Html.Hidden("SysUserCollection[" + i + "].DepartmentID", Model.DepartmentCollection[i].ID)
						@Model.UTOrganizationCollection.First(x => x.ID == Model.DepartmentCollection[i].OrganizationID).Name
						：
					</td>
				</tr>
				<tr>
					<th>
						<span class="red">*</span> 账号：
					</th>
					<td>
						@Html.TextBoxFor(x => x.SysUserCollection[i].UserAccount, new { width = "150px" })
					</td>
					<th>
						<span class="red">*</span> 密码：
					</th>
					<td>
						@Html.PasswordFor(x => x.SysUserCollection[i].Password, new { width = "150px" })
					</td>
				</tr>
   }
		</table>
		<div class="center wfill">
			<input type="submit" value="登录" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog({});" />
		</div>
 }
</div>
