@model FoodSys.Entity.UTOrganization
@{
	Layout = "~/Views/Shared/_LayoutDialog.cshtml";
	var PageState = ViewBag.PageState;
}
<style type="text/css">
	.table-detail th
	{
		width: 150px;
	}
</style>
<div class="wfill hfill center">
	<p class="p-s1">
		@(ViewBag.PageState)组织机构信息
	</p>
	@using (Html.BeginForm())
 {
        @Html.HiddenFor(x => x.Version)
		<table cellpadding="0" cellspacing="0" align="center" class="table-detail">
			<thead>
				<tr>
					<td colspan="2">
						<div>
							机构信息</div>
					</td>
				</tr>
			</thead>
			<tbody>
				<tr>
					<th>
						<span class="red">*</span>机构名称：
					</th>
					<td>
						@Html.TextBoxFor(x => x.Name, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.Name)
					</td>
				</tr>
                <tr>
					<th>
						<span class="red">*</span>排序：
					</th>
					<td>
						@Html.TextBoxFor(x => x.OrderIndex, new { maxlength = 50 })
						@Html.ValidationMessageFor(x => x.OrderIndex)
					</td>
				</tr>
				<tr>
					<th>
						备注：
					</th>
					<td>
						@Html.TextAreaForFix(x => x.Remark, new { style = "height:90px;width:460px;", cols = "20", rows = "5" })
					</td>
				</tr>
			</tbody>
		</table>
		<div class="center wfill">
			@Html.HiddenFor(x => x.ID)
			<input type="submit" value="保存" class="button" />
			<input type="button" value="关闭" class="button" onclick="javascript:window.parent.closeDialog();" />
		</div>
 }
</div>
